<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/battery_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/da_padding">

    <TextView
        android:id="@+id/battery_level_label"
        style="@style/da_TextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/battery_level_value"
        android:text="@string/da_device_connected_battery_level_label" />

    <TextView
        android:id="@+id/battery_level_value"
        style="@style/da_TextMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        tools:text="24%" />
</RelativeLayout>