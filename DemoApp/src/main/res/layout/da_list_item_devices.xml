<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/da_padding">

    <TextView
        android:id="@+id/name"
        style="@style/da_TextMedium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/device_state"
        android:text="Title"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/rssi"
        style="@style/da_TextMicro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/device_state"
        android:text="Value"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:id="@+id/device_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/low_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/da_low_battery"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/button_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/da_padding_half"
            android:src="@drawable/da_button_hub"
            android:visibility="gone"/>

    </LinearLayout>



</RelativeLayout>